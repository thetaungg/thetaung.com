{
    "name": "thetaung-com-monorepo",
    "private": true,
    "version": "0.0.1",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "bun run --filter '*' dev",
        "build": "bun run --filter '*' build",
        "website": "bun run --filter '@thetaung/website'",
        "backend": "bun run --filter '@thetaung/backend'",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,astro,scss,css}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,astro,scss,css}\""
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "prettier": "^3.8.1",
        "prettier-plugin-astro": "^0.14.1",
        "typescript-eslint": "^8.54.0"
    }
}
