---
interface Feature {
    icon: string;
    title: string;
    description: string;
}

interface Props {
    features: Feature[];
}

const { features } = Astro.props;
---

<div class="feature-grid">
    {
        features.map(feature => (
            <div class="feature-grid__item">
                <div class="feature-grid__icon">
                    <span class="material-symbols-outlined">{feature.icon}</span>
                </div>
                <div class="feature-grid__content">
                    <h3 class="feature-grid__title">{feature.title}</h3>
                    <p class="feature-grid__description">{feature.description}</p>
                </div>
            </div>
        ))
    }
</div>

<style>
    .feature-grid {
        display: grid;
        gap: 2.4rem;
        margin: 3.2rem 0;
    }

    @media (min-width: 640px) {
        .feature-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .feature-grid__item {
        display: flex;
        gap: 1.6rem;
        padding: 2.4rem;
        background: var(--showcase-card-bg);
        border-radius: 1.6rem;
        border: 1px solid var(--showcase-card-border);
    }

    .feature-grid__icon {
        flex-shrink: 0;
        width: 4rem;
        height: 4rem;
        border-radius: 1.2rem;
        background: var(--showcase-icon-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--showcase-icon-color);
        box-shadow: var(--shadow-sm);
    }

    .feature-grid__icon .material-symbols-outlined {
        font-size: 2rem;
    }

    .feature-grid__title {
        font-size: 1.6rem;
        font-weight: 600;
        color: var(--showcase-title);
        margin-bottom: 0.4rem;
    }

    .feature-grid__description {
        font-size: 1.4rem;
        line-height: 1.6;
        color: var(--showcase-description);
        margin: 0;
    }
</style>
