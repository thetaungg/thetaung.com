---
import { heroData } from '../data/hero';
import ParticlesBackground from './ParticlesBackground.tsx';
import { SectionBadge } from './SectionBadge';
---

<section id="hero" class="hero">
    <div class="hero__container">
        <div class="hero__content">
            <SectionBadge client:load text={heroData.badge} color="green" variant="outline" />

            <h1 class="hero__headline">
                {heroData.headline.main}
                <br class="hero__br" />
                <span class="hero__headline-accent">{heroData.headline.accent}</span>
            </h1>

            <p class="hero__subheadline">
                {heroData.subheadline.prefix}{' '}
                <span class="hero__highlight">{heroData.subheadline.highlight}</span>{' '}
                {heroData.subheadline.suffix}
            </p>

            <div class="hero__cta">
                <a href={heroData.cta.primary.href} class="hero__btn hero__btn--primary">
                    {heroData.cta.primary.label}
                </a>
                <a href={heroData.cta.secondary.href} class="hero__btn hero__btn--secondary">
                    {heroData.cta.secondary.label}
                </a>
            </div>
        </div>
    </div>
    <ParticlesBackground client:only="react" />
</section>

<style lang="scss">
    .hero {
        position: relative;
        padding-top: 8rem;
        padding-bottom: 8rem;
        overflow: hidden;
        background: linear-gradient(
            180deg,
            transparent 0%,
            rgba(var(--shadow-blue-rgb), 0.03) 100%
        );
        min-height: 100vh;
        display: flex;
        align-items: center;

        @media (min-width: 1024px) {
            padding-top: 12.8rem;
            padding-bottom: 12.8rem;
        }
    }

    .hero__container {
        max-width: 115.2rem;
        margin: 0 auto;
        padding: 0 2.4rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 4rem;

        @media (min-width: 640px) {
            padding: 0 3.2rem;
        }

        @media (min-width: 1024px) {
            padding: 0 4.8rem;
        }
    }

    .hero__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4rem;
        z-index: 10;
    }

    .hero__headline {
        font-size: 5.6rem;
        font-weight: 500;
        letter-spacing: -0.05em;
        color: var(--text-heading);
        line-height: 1.05;
        max-width: 102.4rem;
        text-wrap: balance;

        @media (min-width: 640px) {
            font-size: 7.2rem;
        }

        @media (min-width: 1024px) {
            font-size: 9.6rem;
        }
    }

    .hero__br {
        display: none;

        @media (min-width: 640px) {
            display: block;
        }
    }

    .hero__headline-accent {
        color: var(--text-muted);
    }

    .hero__subheadline {
        font-size: 1.8rem;
        line-height: 1.75;
        color: var(--text-tertiary);
        font-weight: 400;
        max-width: 67.2rem;
        text-wrap: balance;

        @media (min-width: 640px) {
            font-size: 2rem;
        }
    }

    .hero__highlight {
        color: var(--text-primary);
        font-weight: 500;
    }

    .hero__cta {
        display: flex;
        flex-direction: column;
        gap: 1.6rem;
        padding-top: 2.4rem;
        width: 100%;

        @media (min-width: 640px) {
            flex-direction: row;
            width: auto;
        }
    }

    .hero__btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1.6rem 3.2rem;
        border-radius: 9999px;
        font-size: 1.4rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        opacity: 0;
    }

    .hero__btn--primary {
        background: var(--button-primary-bg);
        color: var(--button-primary-text);

        &:hover {
            background: var(--button-primary-hover);
            box-shadow: 0 5px 10px -5px var(--button-primary-shadow);
            transform: translateY(-2px);
        }
    }

    .hero__btn--secondary {
        background: var(--bg-primary);
        color: var(--button-secondary-text);
        border: 1px solid var(--button-secondary-border);

        &:hover {
            background: var(--button-secondary-hover-bg);
            border-color: var(--button-secondary-hover-border);
        }
    }
</style>
