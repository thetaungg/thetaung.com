---
import { skillsData } from '../data/skills';
import type { Skill } from '../data/skills';
---

<section id="skills" class="skills">
    <!-- Background Blobs -->
    <div class="skills__bg">
        <div class="skills__blob skills__blob--1"></div>
        <div class="skills__blob skills__blob--2"></div>
        <div class="skills__blob skills__blob--3"></div>
    </div>

    <div class="skills__container">
        <div class="skills__header">
            <h2 class="skills__title">{skillsData.title}</h2>
            <p class="skills__description">{skillsData.description}</p>
        </div>

        <div class="skills__grid">
            {
                skillsData.rows.map((row: Skill[]) => (
                    <div class="skills__row">
                        {row.map((skill: Skill) => (
                            <div
                                class={`skill-bubble skill-bubble--${skill.size} skill-bubble--${skill.color} skill-bubble--${skill.animation}`}>
                                <div class="skill-bubble__icon">
                                    <img src={skill.icon.src} alt={skill.name} />
                                </div>
                                <span class="skill-bubble__tooltip">{skill.name}</span>
                            </div>
                        ))}
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style lang="scss">
    .skills {
        position: relative;
        padding: 9.6rem 0;
        background: var(--bg-secondary);
        border-top: 1px solid var(--border-subtle);
        overflow: hidden;
    }

    .skills__bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .skills__blob {
        position: absolute;
        border-radius: 9999px;
        filter: blur(48px);
        mix-blend-mode: multiply;
        opacity: 0.7;
    }

    .skills__blob--1 {
        top: 25%;
        left: 25%;
        width: 500px;
        height: 500px;
        background: rgba(var(--blob-blue-rgb), 0.4);
        animation: float-slow 7s ease-in-out infinite;
    }

    .skills__blob--2 {
        bottom: 25%;
        right: 25%;
        width: 400px;
        height: 400px;
        background: rgba(var(--blob-purple-rgb), 0.4);
        animation: float-medium 5s ease-in-out infinite;
        animation-delay: 2s;
    }

    .skills__blob--3 {
        top: 75%;
        left: 33%;
        width: 300px;
        height: 300px;
        background: rgba(var(--blob-green-rgb), 0.4);
        animation: float-fast 4s ease-in-out infinite;
        animation-delay: 1s;
    }

    @keyframes float-slow {
        0%,
        100% {
            translate: 0 0;
        }
        50% {
            translate: 0 -15px;
        }
    }

    @keyframes float-medium {
        0%,
        100% {
            translate: 0 0;
        }
        50% {
            translate: 0 -15px;
        }
    }

    @keyframes float-fast {
        0%,
        100% {
            translate: 0 0;
        }
        50% {
            translate: 0 -15px;
        }
    }

    .skills__container {
        position: relative;
        z-index: 10;
        max-width: 115.2rem;
        margin: 0 auto;
        padding: 0 2.4rem;

        @media (min-width: 640px) {
            padding: 0 3.2rem;
        }

        @media (min-width: 1024px) {
            padding: 0 4.8rem;
        }
    }

    .skills__header {
        text-align: center;
        margin-bottom: 6.4rem;
    }

    .skills__title {
        font-size: 3rem;
        font-weight: 600;
        color: var(--text-heading);
        letter-spacing: -0.025em;
        margin-bottom: 1.6rem;

        @media (min-width: 1024px) {
            font-size: 3.6rem;
        }
    }

    .skills__description {
        font-size: 1.8rem;
        color: var(--text-tertiary);
        max-width: 67.2rem;
        margin: 0 auto;
        font-weight: 300;
    }

    .skills__grid {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2.4rem;
        max-width: 110rem;
        margin: 0 auto;
        padding: 3.2rem 0;

        @media (min-width: 768px) {
            gap: 4rem;
        }

        @media (min-width: 1024px) {
            gap: 5.6rem;
        }
    }

    .skills__row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 2.4rem;

        @media (min-width: 768px) {
            gap: 4rem;
        }

        @media (min-width: 1024px) {
            gap: 5.6rem;
        }
    }

    /* Skill Bubble */
    .skill-bubble {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 9999px;
        background: var(--bg-primary);
        cursor: pointer;
        transition:
            scale 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
            opacity 0.3s ease;

        &:hover {
            scale: 1.1;

            .skill-bubble__tooltip {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }
    }

    .skill-bubble__icon {
        display: flex;
        align-items: center;
        justify-content: center;

        img {
            object-fit: contain;
        }
    }

    .skill-bubble__tooltip {
        position: absolute;
        bottom: calc(100% + 0.8rem);
        left: 50%;
        transform: translateX(-50%) translateY(0.8rem);
        padding: 0.6rem 1.2rem;
        background: var(--tooltip-bg);
        color: var(--tooltip-text);
        font-size: 1.2rem;
        font-weight: 500;
        border-radius: 9999px;
        white-space: nowrap;
        opacity: 0;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-lg);
        z-index: 20;
    }

    /* Size variants */
    .skill-bubble--sm {
        width: 6.4rem;
        height: 6.4rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);

        .skill-bubble__icon img {
            width: 2.4rem;
            height: 2.4rem;
        }

        @media (min-width: 768px) {
            width: 8rem;
            height: 8rem;

            .skill-bubble__icon img {
                width: 2.8rem;
                height: 2.8rem;
            }
        }
    }

    .skill-bubble--md {
        width: 8rem;
        height: 8rem;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05);

        .skill-bubble__icon img {
            width: 2.8rem;
            height: 2.8rem;
        }

        @media (min-width: 768px) {
            width: 9.6rem;
            height: 9.6rem;

            .skill-bubble__icon img {
                width: 4rem;
                height: 4rem;
            }
        }
    }

    .skill-bubble--lg {
        width: 9.6rem;
        height: 9.6rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);

        .skill-bubble__icon img {
            width: 4rem;
            height: 4rem;
        }

        @media (min-width: 768px) {
            width: 12.8rem;
            height: 12.8rem;

            .skill-bubble__icon img {
                width: 4.8rem;
                height: 4.8rem;
            }
        }
    }

    /* Color variants */
    .skill-bubble--blue {
        border: 1px solid rgba(var(--bubble-blue-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-blue-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-blue-hover-rgb), 0.5);
        }
    }

    .skill-bubble--cyan {
        border: 1px solid rgba(var(--bubble-cyan-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-cyan-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-cyan-hover-rgb), 0.5);
        }
    }

    .skill-bubble--green {
        border: 1px solid rgba(var(--bubble-green-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-green-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-green-hover-rgb), 0.5);
        }
    }

    .skill-bubble--purple {
        border: 1px solid rgba(var(--bubble-purple-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-purple-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-purple-hover-rgb), 0.5);
        }
    }

    .skill-bubble--pink {
        border: 1px solid rgba(var(--bubble-pink-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-pink-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-pink-hover-rgb), 0.5);
        }
    }

    .skill-bubble--orange {
        border: 1px solid rgba(var(--bubble-orange-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-orange-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-orange-hover-rgb), 0.5);
        }
    }

    .skill-bubble--amber {
        border: 1px solid rgba(var(--bubble-amber-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-amber-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-amber-hover-rgb), 0.5);
        }
    }

    .skill-bubble--slate {
        border: 1px solid rgba(var(--bubble-slate-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-slate-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-slate-hover-rgb), 0.5);
        }
    }

    .skill-bubble--yellow {
        border: 1px solid rgba(var(--bubble-yellow-border-rgb), 0.5);
        box-shadow: 0 20px 25px -5px rgba(var(--bubble-yellow-border-rgb), 0.5);

        &:hover {
            box-shadow: 0 25px 50px -12px rgba(var(--bubble-yellow-hover-rgb), 0.5);
        }
    }

    /* Animation variants */
    .skill-bubble--slow {
        animation: float-slow 7s ease-in-out infinite;
    }

    .skill-bubble--medium {
        animation: float-medium 5s ease-in-out infinite;
    }

    .skill-bubble--fast {
        animation: float-fast 4s ease-in-out infinite;
    }
</style>
