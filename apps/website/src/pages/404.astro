---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout
    title="Page not found | Thetaung"
    description="The page you requested could not be found."
    noindex={true}>
    <link
        slot="head"
        href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&display=swap"
        rel="stylesheet"
    />
    <Navbar />
    <main class="page">
        <section class="container hero">
            <div class="terminal" aria-hidden="true">
                <div class="terminal__header">
                    <div class="terminal__dots">
                        <span class="terminal__dot terminal__dot--red"></span>
                        <span class="terminal__dot terminal__dot--yellow"></span>
                        <span class="terminal__dot terminal__dot--green"></span>
                    </div>
                    <span class="terminal__title">bash</span>
                </div>
                <div class="terminal__body">
                    <div class="terminal__line">
                        <span class="terminal__prompt">›</span>
                        <span class="terminal__command" id="t-request">GET /this-page</span>
                    </div>
                    <div class="terminal__spacer"></div>
                    <div class="terminal__line">
                        <span class="terminal__status-badge">404</span>
                        <span class="terminal__status-text">No static file found</span>
                    </div>
                    <div class="terminal__spacer"></div>
                    <div class="terminal__line">
                        <span class="terminal__path" id="t-path">dist/this-page/index.html</span>
                    </div>
                    <div class="terminal__line terminal__line--trace">└── does not exist</div>
                    <div class="terminal__spacer"></div>
                    <div class="terminal__spacer"></div>
                    <div class="terminal__line">
                        <span class="terminal__prompt">›</span>
                        <span class="terminal__cursor"></span>
                    </div>
                </div>
            </div>

            <div class="content">
                <p class="content__kicker">404</p>
                <h1 class="content__title">Page not found</h1>
                <p class="content__description">
                    The link may be broken or the page might have moved. Try the homepage or if you
                    think this is an error, please contact me.
                </p>
                <div class="content__actions">
                    <a class="content__btn content__btn--primary" href="/">Go home</a>
                    <a class="content__btn content__btn--secondary" href="/#contact">Contact me</a>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<script is:inline>
    const pathname = window.location.pathname;
    const slug = pathname.replace(/^\/|\/$/g, '') || 'index';

    document.getElementById('t-request').textContent = 'GET ' + pathname;
    document.getElementById('t-path').textContent = 'dist/' + slug + '/index.html';
</script>

<style lang="scss">
    .page {
        min-height: 100vh;
        background:
            radial-gradient(circle at top, rgba(var(--blob-blue-rgb), 0.4), transparent 60%),
            radial-gradient(circle at 80% 30%, rgba(var(--blob-purple-rgb), 0.35), transparent 55%),
            var(--bg-primary);
        display: flex;
        align-items: stretch;
    }

    .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 4rem;
        padding: 14rem 0 12rem;
        text-align: center;
    }

    .terminal {
        width: 100%;
        max-width: 56rem;
        background: var(--code-bg);
        border: 1px solid var(--code-border);
        border-radius: 2rem;
        overflow: hidden;
        font-family: 'Fira Code', 'SF Mono', ui-monospace, 'Cascadia Code', monospace;
        font-size: 1.35rem;
        text-align: left;
        box-shadow:
            0 0 0 1px rgba(var(--color-blue-500-rgb), 0.08),
            0 0.5rem 1rem rgba(var(--color-black-rgb), 0.45);

        &__header {
            background: var(--code-header-bg);
            border-bottom: 1px solid var(--code-header-border);
            padding: 1.4rem 2rem;
            display: flex;
            align-items: center;
            gap: 1.2rem;
        }

        &__dots {
            display: flex;
            gap: 0.7rem;
            align-items: center;
        }

        &__dot {
            width: 1.2rem;
            height: 1.2rem;
            border-radius: 50%;

            &--red {
                background: #ff5f57;
            }
            &--yellow {
                background: #febc2e;
            }
            &--green {
                background: #28c840;
            }
        }

        &__title {
            font-size: 1.2rem;
            color: var(--code-filename);
            letter-spacing: 0.06em;
        }

        &__body {
            padding: 2.8rem 3.2rem 3.2rem;
            display: flex;
            flex-direction: column;
            gap: 0.4rem;
            line-height: 1.8;
        }

        &__line {
            display: flex;
            align-items: baseline;
            gap: 0.8rem;
            color: var(--code-text);
            white-space: nowrap;

            &--trace {
                color: var(--code-filename);
                font-size: 1.25rem;
                gap: 0;
                padding-left: 0.2rem;
            }
        }

        &__spacer {
            height: 0.8rem;
        }

        &__prompt {
            color: var(--color-blue-400);
            font-weight: 700;
            flex-shrink: 0;
            user-select: none;
        }

        &__command {
            color: var(--code-text);
        }

        &__status-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(var(--color-red-500-rgb), 0.18);
            color: var(--color-red-500);
            font-weight: 700;
            font-size: 1.2rem;
            padding: 0.15rem 0.7rem;
            border-radius: 0.5rem;
            letter-spacing: 0.04em;
            border: 1px solid rgba(var(--color-red-500-rgb), 0.3);
            flex-shrink: 0;
        }

        &__status-text {
            color: rgba(var(--color-red-500-rgb), 0.75);
        }

        &__path {
            color: var(--color-blue-300);
            opacity: 0.8;
        }

        &__comment {
            color: var(--code-dot);
            font-style: italic;
        }

        &__cursor {
            display: inline-block;
            width: 0.75rem;
            height: 1.5rem;
            background: var(--color-blue-400);
            border-radius: 2px;
            vertical-align: middle;
            animation: blink 1.1s step-end infinite;
        }
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;

        &__kicker {
            display: inline-block;
            font-size: 1.1rem;
            font-weight: 700;
            letter-spacing: 0.32em;
            text-transform: uppercase;
            color: var(--accent-primary);
            background: var(--accent-primary-light);
            padding: 0.4rem 1.2rem;
            border-radius: 999px;
            margin-bottom: 2rem;
        }

        &__title {
            font-size: 3.6rem;
            margin-bottom: 1.2rem;

            @media (min-width: 768px) {
                font-size: 4.8rem;
            }
        }

        &__description {
            font-size: 1.6rem;
            color: var(--text-tertiary);
            max-width: 48rem;
            margin-bottom: 3.2rem;
        }

        &__actions {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1.6rem;
        }

        &__btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 1.2rem 2.4rem;
            border-radius: 999px;
            font-weight: 600;
            font-size: 1.5rem;
            transition:
                transform 0.2s ease,
                box-shadow 0.2s ease,
                background 0.2s ease,
                color 0.2s ease,
                border-color 0.2s ease;

            &--primary {
                background: var(--button-primary-bg);
                color: var(--button-primary-text);
                box-shadow: 0 16px 30px -20px var(--button-primary-shadow);

                &:hover {
                    transform: translateY(-2px);
                    background: var(--button-primary-hover);
                }
            }

            &--secondary {
                border: 1px solid var(--button-secondary-border);
                background: var(--button-secondary-bg);
                color: var(--button-secondary-text);

                &:hover {
                    border-color: var(--button-secondary-hover-border);
                    background: var(--button-secondary-hover-bg);
                }
            }
        }
    }
</style>
